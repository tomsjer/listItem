<div id="app"
  class=" {{#if loading}} loading {{/if}}
          {{#if items}} has-items {{else}} no-items {{/if}}"
  >
  {{#if loading }}
    
  {{ else }}
    <aside class="item-list"></aside>
    <main>
      <div class="item-active {{#if itemEdit}} item-edit {{/if}}"></div>
      <div class="counter"></div>
      <div class="tooltip"><p>Clickme to add a new item!</p></div>
      <a data-bind="addItem" href="#" title="Clickme to add a new item!" class="btn btn-add {{#if itemEdit}} hidden {{/if }}"><i class="material-icons">add</i></a>
    </main>
    <div class="notifications-container">
    </div>
  {{/if}}
</div>